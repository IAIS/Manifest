<utils:MyControl x:Class="Manifest.UI.Confirmation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Manifest.Utils"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"  CanVerticallyScroll="True" FlowDirection="LeftToRight" Margin="10">
            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" FlowDirection="RightToLeft" >
        همکار گرامی در صورتی که از اطلاعات وارد شده در مراحل قبل مطمئن هستید می توانید خروجی برنامه را در سامانه ی اظهار از راه دور وارد کرده و بر اساس آن اظهار نمایید
            </TextBlock>
            <Button Name="btnSubmit" Click="BtnSubmit_OnClick" Margin="0 10 0 10">ذخیره خروجی</Button>
            <TextBox Name="txtResult" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
        </StackPanel>
    </ScrollViewer>
</utils:MyControl>
