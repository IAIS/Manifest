<utils:MyControl x:Class="Manifest.UI.Steps.UploadVoyage" x:Name="uploadVoyageWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Manifest.Utils"
             xmlns:userControl="clr-namespace:Manifest.UserControl"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" CanVerticallyScroll="True" FlowDirection="LeftToRight" Margin="10">
            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" FlowDirection="RightToLeft" >
                همکار گرامی در این مرحله می تواند فایل حاوی اطلاعات مانیفست را بارگذاری کنید و یا این اطلاعات را به صورت دستی وارد کنید. 
                بعد از اطمینان از صحت اطلاعات وارد شده به مرحله ی بعد (ثبت اطلاعات بارنامه مراجعه کنید) 
            </TextBlock>
            <Button Name="btnUploadVoyage" Margin="0 10 0 10" Click="BtnUploadVoyage_OnClick">بارگزاری اطلاعات مانیفست</Button>
            <userControl:uVoyage x:Name="ucVoyage" />
        </StackPanel>
    </ScrollViewer>
</utils:MyControl>
