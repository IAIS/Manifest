<utils:DetailsPage x:Class="Manifest.UI.Steps.Lotka.UploadConsignment" 
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Manifest.Utils"
             xmlns:userControl="clr-namespace:Manifest.UserControl"
             mc:Ignorable="d">
    <DockPanel FlowDirection="LeftToRight" Margin="10">
            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" DockPanel.Dock="Top" FlowDirection="RightToLeft" >
                در حال حاضر برای ورود اطلاعات کالا تنها امکان ورود دستی اطلاعات وجود دارد.
            </TextBlock>
            <Button Name="btnUploadConsignment" DockPanel.Dock="Top" IsEnabled="False" Margin="0 10 0 1">بارگذاری اطلاعات کالا</Button>
        <Button Name="btnNewConsignment" DockPanel.Dock="Top" Click="BtnNewConsignment_OnClick" Margin="0 1 0 10">افزودن اطلاعات کالای جدید</Button>
            <userControl:uConsignmentDetails x:Name="UConsignmentDetails"/>
    </DockPanel>
</utils:DetailsPage>
