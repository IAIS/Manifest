<utils:DetailsPage x:Class="Manifest.UI.Steps.Lotka.UploadBL"  x:Name="uploadBlLootka"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Manifest.Utils"
             xmlns:userControl="clr-namespace:Manifest.UserControl"
             mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical"  CanVerticallyScroll="True" FlowDirection="LeftToRight" Margin="10">
            <TextBlock TextWrapping="Wrap" TextAlignment="Justify" FlowDirection="RightToLeft" >
                همکار گرامی لطفا فایل حاوی اطلاعات بارنامه را ثبت کرده و در صورت نیاز اطلاعات آن را ویرایش کنید. 
                بعد از اطمینان از صحت اطلاعات به مرحله ی بعد (ثبت ارتباطات کانتینر و بارنامه) مراجعه نمایید.
            </TextBlock>
            <Button Name="btnUploadBillOfLading" Click="BtnUploadBillOfLading_OnClick" Margin="0 10 0 1">بارگذاری اطلاعات بارنامه</Button>
            <Button Name="btnNewBillOfLading" Click="BtnNewBillOfLading_OnClick" Margin="0 1 0 10">افزودن بارنامه جدید</Button>
            <userControl:uBillOfLadingDetails x:Name="UBillOfLadingDetails" />
        </StackPanel>
    </ScrollViewer>
</utils:DetailsPage>
