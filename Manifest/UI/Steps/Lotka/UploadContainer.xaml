<utils:DetailsPage x:Class="Manifest.UI.Steps.Lotka.UploadContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Manifest.Utils"
             xmlns:userControl="clr-namespace:Manifest.UserControl"
             mc:Ignorable="d">
    <DockPanel FlowDirection="LeftToRight" Margin="10">
        <TextBlock TextWrapping="Wrap" DockPanel.Dock="Top" TextAlignment="Justify" FlowDirection="RightToLeft" >
                همکار گرامی لطفا فایل حاوی اطلاعات کانتینر را ثبت کرده و در صورت نیاز اطلاعات آن را ویرایش کنید.
                بعد از اطمینان از صحت اطلاعات به مرحله ی بعد (ثبت ارتباطات) مراجعه نمایید.
        </TextBlock>
        <Button Name="btnUploadContainer" DockPanel.Dock="Top" Click="BtnUploadContainer_OnClick" Margin="0 10 0 1">بارگزاری اطلاعات کانتینر</Button>
        <Button Name="btnNewContainer" DockPanel.Dock="Top" Click="BtnNewContainer_OnClick" Margin="0 1 0 10">افزودن کانتینر جدید</Button>
        <userControl:uContainerDetails x:Name="UContainerDetails"/>
    </DockPanel>
</utils:DetailsPage>
