<utils:DetailsPage x:Class="Manifest.UI.Steps.Hoopad.UploadBL" x:Name="uploadBLWindowHoopad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:userControl="clr-namespace:Manifest.UserControl"
             xmlns:utils="clr-namespace:Manifest.Utils" mc:Ignorable="d">
    <DockPanel FlowDirection="LeftToRight" Margin="10" DataContext="{Binding ElementName=uploadBLWindowHoopad}">
        <TextBlock TextWrapping="Wrap" TextAlignment="Justify" FlowDirection="RightToLeft" DockPanel.Dock="Top" >
                همکار گرامی در صورت نیاز می توانید اطلاعات بارنامه ها را ویرایش کنید. 
                بعد از اطمینان از صحت اطلاعات به مرحله ی بعد (ثبت اطلاعات کانتینر) مراجعه نمایید.
        </TextBlock>
        <Button Name="btnNewBillOfLading" Click="BtnNewBillOfLading_OnClick" Margin="0 10 0 1" DockPanel.Dock="Top">افزودن بارنامه جدید</Button>
        <userControl:uBillOfLadingDetails x:Name="uBillOfLadingDetails" />
    </DockPanel>
</utils:DetailsPage>
