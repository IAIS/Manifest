<utils:DetailsPage x:Class="Manifest.UI.Steps.Hoopad.UploadContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:utils="clr-namespace:Manifest.Utils"
             xmlns:userControl="clr-namespace:Manifest.UserControl"
             mc:Ignorable="d">
    <DockPanel FlowDirection="LeftToRight" Margin="10">
        <TextBlock TextWrapping="Wrap" TextAlignment="Justify" FlowDirection="RightToLeft" DockPanel.Dock="Top">
                همکار گرامی در صورت نیاز می توانید اطلاعات کانتینر را ویرایش کرده یا برای کانتینر کالای جدید ثبت کنید.
                بعد از اطمینان از صحت اطلاعات به مرحله ی بعد (ثبت اطلاعات کالا) مراجعه نمایید.
        </TextBlock>
        <Button Name="btnNewContainer" Click="BtnNewContainer_OnClick" Margin="0 10 0 10" DockPanel.Dock="Top">افزودن کانتینر جدید</Button>
        <userControl:uContainerDetails x:Name="UContainerDetails"/>
    </DockPanel>
</utils:DetailsPage>
