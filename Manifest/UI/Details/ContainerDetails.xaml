<mui:ModernWindow x:Class="Manifest.UI.Details.ContainerDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControl="clr-namespace:Manifest.UserControl"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI" 
        SizeToContent="WidthAndHeight" Title="ContainerDetails">
    <mui:ModernWindow.Resources>
        <Style x:Key="BlankWindow" TargetType="mui:ModernWindow" BasedOn="{StaticResource EmptyWindow}" />
    </mui:ModernWindow.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
            <userControl:uContainer x:Name="ucContainer" />
        </StackPanel>
    </ScrollViewer>
</mui:ModernWindow>
