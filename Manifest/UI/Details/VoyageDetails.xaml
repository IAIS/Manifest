<mui:ModernWindow x:Class="Manifest.UI.Details.VoyageDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:userControl="clr-namespace:Manifest.UserControl"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        Title="VoyageDetails"  SizeToContent="WidthAndHeight">
    <mui:ModernWindow.Resources>
        <Style x:Key="BlankWindow" TargetType="mui:ModernWindow" BasedOn="{StaticResource EmptyWindow}" />
    </mui:ModernWindow.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
            <userControl:uVoyage x:Name="ucVoyage" />
        </StackPanel>
    </ScrollViewer>
</mui:ModernWindow>
