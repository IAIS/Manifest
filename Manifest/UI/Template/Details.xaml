<mui:ModernWindow x:Class="Manifest.UI.Template.Details"  Style="{StaticResource BlankWindow}"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mui="http://firstfloorsoftware.com/ModernUI"
      xmlns:userControl="clr-namespace:Manifest.UserControl"
      mc:Ignorable="d" SizeToContent="WidthAndHeight" Title="Details">
    <mui:ModernWindow.Resources>
        <Style x:Key="BlankWindow" TargetType="mui:ModernWindow" BasedOn="{StaticResource EmptyWindow}" />
    </mui:ModernWindow.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" CanVerticallyScroll="True">
            <userControl:uDetails x:Name="uDetails" />
        </StackPanel>
    </ScrollViewer>
</mui:ModernWindow>
